{
  "name": "async-toolbox",
  "version": "0.4.3",
  "description": "A toolbox of utilities to help with async (promise-based) transformations",
  "main": "dist/index",
  "files": [
    "dist/**/*",
    "events.js",
    "events.d.ts",
    "list.js",
    "list.d.ts",
    "request.js",
    "request.d.ts",
    "stream.js",
    "stream.d.ts"
  ],
  "repository": "https://github.com/gburgett/async-toolbox",
  "scripts": {
    "lint": "tslint 'src/**/*.ts'",
    "fix": "tslint 'src/**/*.ts' --fix",
    "test": "yarn run clean && tsc --project tsconfig.test.json && nyc ava src/*.test.js src/**/*.test.js",
    "test-watch": "ava --watch",
    "coverage": "yarn run test && nyc report --reporter=html && open coverage/index.html",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build": "tsc",
    "prepare": "yarn run build",
    "clean": "rm -rf dist; bash -c 'shopt -s globstar; rm src/**/*.js src/**/*.map src/**/*.d.ts'; true"
  },
  "keywords": [
    "async",
    "stream",
    "monad"
  ],
  "author": "Gordon Burgett (gordon@gordonburgett.net)",
  "license": "MIT",
  "optionalDependencies": {
    "limiter": "^1.1.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/node": "^12.12.21",
    "@types/request": "^2.48.1",
    "ava": "^2.4.0",
    "coveralls": "^3.0.2",
    "fs-extra": "^8.1.0",
    "nyc": "^13.1.0",
    "request": "^2.88.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.4"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "cache": true,
    "failFast": true,
    "verbose": true,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
