{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rules": {
    "semicolon": [true, "never"],
    "quotemark": [true, "single"],
    "triple-equals": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "interface-name": [true, "never-prefix"]
  },
  "linterOptions": {
    "exclude": [
      "**/*.js",
      "**/*.d.ts"
    ]
  }
}